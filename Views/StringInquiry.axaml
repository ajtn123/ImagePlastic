<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ImagePlastic.ViewModels"
        x:DataType="vm:StringInquiryViewModel"
        mc:Ignorable="d"
        x:Class="ImagePlastic.Views.StringInquiry">
    <TextBox Text="{Binding Result}" Grid.Row="1" Margin="5" Height="32" Watermark="{Binding Message}" x:Name="InquiryBox">
        <TextBox.InnerRightContent>
            <StackPanel Orientation="Horizontal">
                <Button IsDefault="True" Command="{Binding DenyCommand}" Grid.Row="1" Grid.Column="1" Margin="1,1,0,1" Height="28">
                    <Image Source="{SvgImage /Assets/Deny.svg}"/>
                </Button>
                <Button IsDefault="True" Command="{Binding ConfirmCommand}" Grid.Row="1" Grid.Column="2" Margin="1" Height="28">
                    <Image Source="{SvgImage /Assets/Confirm.svg}"/>
                </Button>
            </StackPanel>
        </TextBox.InnerRightContent>
        <TextBox.KeyBindings>
            <KeyBinding Gesture="Escape" Command="{Binding DenyCommand}" />
            <KeyBinding Gesture="Enter" Command="{Binding ConfirmCommand}" />
        </TextBox.KeyBindings>
    </TextBox>
</UserControl>
