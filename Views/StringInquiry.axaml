<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ImagePlastic.ViewModels"
        x:DataType="vm:StringInquiryViewModel"
        mc:Ignorable="d" MaxWidth="600"
        x:Class="ImagePlastic.Views.StringInquiry">
    <TextBox Text="{Binding Result}" Watermark="{Binding Message}" x:Name="InquiryBox" TextWrapping="Wrap">
        <TextBox.InnerRightContent>
            <StackPanel Orientation="Horizontal">
                <Button IsDefault="True" Command="{Binding DenyCommand}" Height="26" Width="26" Padding="5" Background="#1FFF0000" BorderBrush="#7FFF7F7F">
                    <Image Source="{SvgImage /Assets/Deny.svg}"/>
                </Button>
                <Button IsDefault="True" Command="{Binding ConfirmCommand}" Margin="1,0,2,0" Height="26" Width="26" Padding="5" Background="#1F00FF00" BorderBrush="#7F7FFF7F">
                    <Image Source="{SvgImage /Assets/Confirm.svg}"/>
                </Button>
            </StackPanel>
        </TextBox.InnerRightContent>
        <TextBox.KeyBindings>
            <KeyBinding Gesture="Escape" Command="{Binding DenyCommand}" />
            <KeyBinding Gesture="Enter" Command="{Binding ConfirmCommand}" />
        </TextBox.KeyBindings>
    </TextBox>
</UserControl>
