<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ImagePlastic.ViewModels"
        x:DataType="vm:StringInquiryViewModel"
        mc:Ignorable="d"
        x:Class="ImagePlastic.Views.StringInquiry">
    <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto,Auto">
        <TextBox Text="{Binding Result}" Grid.Row="1" Margin="5,5,0,5" Height="32" Watermark="{Binding Message}"/>
        <Button Command="{Binding DenyCommand}" Grid.Row="1" Grid.Column="1" Margin="5,5,0,5" Height="32">
            <Image Source="{SvgImage /Assets/Deny.svg}"/>
        </Button>
        <Button Command="{Binding ConfirmCommand}" Grid.Row="1" Grid.Column="2" Margin="5" Height="32">
            <Image Source="{SvgImage /Assets/Confirm.svg}"/>
        </Button>
    </Grid>
</UserControl>
