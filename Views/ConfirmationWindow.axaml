<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" SizeToContent="Height" Width="300"
        Icon="/Assets/avalonia-logo.ico"
        x:Class="ImagePlastic.Views.ConfirmationWindow"
        xmlns:vm="using:ImagePlastic.ViewModels"
        x:DataType="vm:ConfirmationWindowViewModel"
        Title="{Binding Title}">
    <Grid ColumnDefinitions="Auto,*" RowDefinitions="*,Auto">
        <Image Source="{SvgImage /Assets/Info.svg}" Height="50" Margin="5" VerticalAlignment="Top"/>
        <TextBlock Grid.Column="1" Text="{Binding Message}" TextWrapping="Wrap" Margin="5"/>
        <StackPanel HorizontalAlignment="Right" Grid.Column="1" Grid.Row="1" Orientation="Horizontal">
            <Button Command="{Binding DenyCommand}" Margin="5,5,0,5">
                <Image Source="{SvgImage /Assets/Deny.svg}"/>
            </Button>
            <Button Command="{Binding ConfirmCommand}" Margin="5">
                <Image Source="{SvgImage /Assets/Confirm.svg}"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
